<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mealBackground"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/meal_info_background"
        android:padding="15dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mealHourTV"
            android:textAlignment="center"
            android:textColor="@color/mealBackground"
            android:text="10:00"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mealTypeTV"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textColor="@color/mealBackground"
            android:text="obiad"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mealNameTV"
        android:text="Spagethi"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:background="@drawable/meal_name_background"
        android:textSize="18sp" />


</LinearLayout>